@model avSVAW.Models.LineForm
@{

    ViewBag.Title = Resources.Language.Line;
    ViewBag.SubTitle = Resources.Language.Edit + " " + ViewBag.Title;
}
@section header{
    @ViewBag.SubTitle
}
