@model Model.DataModel.tblEventDef
@{

    ViewBag.Title = Resources.Language.EventDef;
    ViewBag.SubTitle = Resources.Language.Edit + " " + Resources.Language.EventDef;
}
@section header{
    @ViewBag.SubTitle
}


<div class="row">
    <div class="col-xs-12">

        <div class="box">
            @*<form class="form-horizontal" id="frmDetail" method="post" action="@Url.Action("UpdateRecord")">*@
            @using (Html.BeginForm("Edit", "EventDef", FormMethod.Post, new { @class = "form-horizontal form-label-left", @id = "frmValidate", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="box-body">

                    <input type="hidden" name="EventDefId" class="form-control" value="@Model.Id" />

                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.LabelFor(model => model.Name, Resources.Language.Name, new { @class = "control-label required" })
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control col-md-7 col-xs-12" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.LabelFor(model => model.Description, Resources.Language.Description, new { @class = "control-label" })
                        </div>
                        <div class="col-md-10 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control col-md-7 col-xs-12" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.LabelFor(model => model.zOrder, Resources.Language.Order, new { @class = "control-label required" })
                        </div>
                        <div class="col-md-2 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.zOrder, htmlAttributes: new { @class = "form-control col-md-7 col-xs-12" })
                        </div>
                        @Html.ValidationMessageFor(model => model.zOrder, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.LabelFor(model => model.Color, Resources.Language.Color, new { @class = "control-label required" })
                        </div>
                        <div class="col-sm-2">
                            <div class="input-group av-colorpicker">
                                @Html.TextBoxFor(model => model.Color, htmlAttributes: new { @class = "form-control col-md-7 col-xs-12" })
                                @*<div class="input-group-addon">
                                    <i></i>
                                </div>*@
                            </div>

                        </div>
                    </div>
                    @*<div class="form-group">
                                <label for="EventDefUsingSound" class="col-sm-2 control-label">&nbsp;@Resources.Language.UsingSound</label>
                                <div class="col-sm-10">
                                    <label>
                                        @{
                                            var strCheck = "";
                                            if (Model.UsingSound == 1) { strCheck = " checked "; }
                                        }
                                        <input type="checkbox" class="flat-red" name="EventDefUsingSound" @strCheck>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="EventDefSoundFileName" class="col-sm-2 control-label">@Resources.Language.Filename</label>
                                <div class="col-sm-2">
                                    <input type="text" name="EventDefSoundFileName" class="form-control" value="@Model.SoundFileName" />
                                </div>
                            </div>
                        </div>*@
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>&nbsp;&nbsp;@Resources.Language.Save&nbsp;</button>
                        <a href="@Url.Action("Index")" class="btn btn-info pull-right">
                            <i class="fa fa-mail-reply"></i>&nbsp;&nbsp; @Resources.Language.Back &nbsp;
                        </a>
                    </div>
                    <!-- /.box-footer -->
                </div>
            }

        </div>

    </div>
</div>

